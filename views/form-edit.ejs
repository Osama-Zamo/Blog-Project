<%- include("partials/header.ejs") %>

  <div class="container">
    <div class="row">
      <div class="col text-center">
        <form action="/confirm-edit" method="POST">
          <div class="form-group">
            <label for="exampleFormControlInput1">Title</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Post Title"
              name="inputTitle" value="<%= data[index].title %>">
          </div>

          <div class="form-group">
            <label for="exampleFormControlTextarea1">Content</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" placeholder="Content..."
              name="inputContent"><%= data[index].content %></textarea>
          </div>

          <div class="mb-3">
            <label for="formFile" class="form-label">Thumbnail</label>
            <input class="form-control" type="file" id="formFile">
          </div>

          <input class="form-check-input" type="radio" name="radio" value="<%= index %>" checked hidden>
          <input class="btn btn-outline-primary rounded-pill px-3 my-3" type="submit" value="Submit">
        </form>
      </div>
    </div>
  </div>

  <%- include("partials/footer.ejs") %>